<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!--Doctor model tree view mode definition-->
    <record id="doctor_tree" model="ir.ui.view">
      <field name="name">hospital.doctor.tree</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
          <tree string="Doctors">
              <field name="name"/>
              <field name="gender"/>
          </tree>
      </field>
    </record>


    <!--Doctor model form view mode definition-->
    <record id="doctor_form" model="ir.ui.view">
      <field name="name">hospital.doctor.form</field>
      <field name="model">hospital.doctor</field>
      <field name="arch" type="xml">
          <form string="Doctors">
              <sheet>
                  <group>
                      <group>
                          <field name="name"/>
                      </group>
                      <group>
                          <group>
                              <field name="gender"/>
                          </group>
                          <group>
                              <field name="user_id"/>
                          </group>
                      </group>
                  </group>
              </sheet>
          </form>
        </field>
    </record>
    <!-- Action of the Doctors Menu -->
    <record id="action_doctor" model="ir.actions.act_window">
            <field name="name">Doctors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.doctor</field>
            <field name="view_type">form</field>
            <field name="context">{}</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create your first Doctor !
              </p>
            </field>
    </record>

    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="hospital_root" name="Hospital" sequence="0"/>
    <menuitem id="hospital_doctor" name="Doctors" parent="hospital_root" action="action_doctor"/>
</odoo>