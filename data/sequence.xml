<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Sequences for hospital.patient -->
        <record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Hospital Patient</field>
            <field name="code">hospital.patient.code</field>
            <field name="prefix">HPC</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

         <!-- Sequences for hospital.appointment -->
        <record id="seq_hospital_appointment" model="ir.sequence">
            <field name="name">Hospital Appointment</field>
            <field name="code">hospital.appointment.code</field>
            <field name="prefix">HAC</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
